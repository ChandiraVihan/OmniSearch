<Window x:Class="OmniSearchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OmniSearch" Height="80" Width="600"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" Topmost="True">
    
    <Border Background="#2D2D30" CornerRadius="10" BorderBrush="#3E3E42" BorderThickness="1">
        <Grid>
            <TextBox x:Name="SearchInput" 
                     Background="Transparent" 
                     Foreground="White" 
                     BorderThickness="0" 
                     FontSize="24" 
                     VerticalAlignment="Center" 
                     Margin="20,0"
                     GotFocus="SearchInput_GotFocus"
                     TextChanged="SearchInput_TextChanged"/>
            
            <TextBlock IsHitTestVisible="False" 
                       Text="Search everything..." 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left" 
                       Margin="25,0" 
                       Foreground="Gray" 
                       FontSize="24">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=SearchInput}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Border>
</Window>
